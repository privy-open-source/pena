{
  "name": "@privyid/pena",
  "description": "PrivyID's Official Client Integration Library for signing",
  "version": "0.3.0",
  "type": "module",
  "main": "./dist/pena.umd.cjs",
  "module": "./dist/pena.js",
  "jsdelivr": "./dist/pena.iife.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/pena.umd.cjs",
      "import": "./dist/pena.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
