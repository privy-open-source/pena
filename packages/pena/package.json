    "@privyid/pena-utils": "workspace:^",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@vitest/coverage-c8": "0.29.8",
    "browserslist-to-esbuild": "^1.2.0",
    "happy-dom": "^8.2.2",
    "jest-extended": "^3.2.4",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^2.0.0",
    "vitest": "0.29.8"
  },
  "publishConfig": {
    "access": "public"
